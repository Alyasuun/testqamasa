import java.util.Scanner;

public class hwww { 
public static void main(String args[]){
    Scanner MyScanner = new Scanner(System.in);
    System.out.println ("Write your day:");
    int day = MyScanner.nextInt(); 
        int n; 
        String name = ""; 
        
        switch(day) {
        case 1: day = 1; name = "Sunday"; break; 
        case 2: day = 2; name = "Monday"; break; 
        case 3: day = 3; name = "Tuesday"; break; 
        case 4: day = 4;  name = "Wednesday"; break;
        case 5: day = 5; name = "Thursday"; break; 
        case 6: day = 6; name = "Frieday"; break;
        case 7: day = 7; name = "Saturday"; break;  
        default: name = "Oshibka"; break;  
        }
        System.out.println ("Your day is " + name);
}
}
